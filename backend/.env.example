# ==============================================
# 2a Vara Civel de Cariacica - Backend Config
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ----------------------------------------------
# DATABASE
# ----------------------------------------------
# Development (SQLite):
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL) - uncomment and configure:
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require"

# ----------------------------------------------
# SERVER
# ----------------------------------------------
PORT=3001
NODE_ENV="development"  # Use "production" in production
FRONTEND_URL="http://localhost:3000"

# ----------------------------------------------
# EMAIL (SendGrid)
# ----------------------------------------------
# Leave empty for demo mode (emails logged to console)
SENDGRID_API_KEY=""
EMAIL_FROM="noreply@example.com"
EMAIL_TO="admin@example.com"

# ----------------------------------------------
# ADMIN PANEL (AdminJS)
# ----------------------------------------------
# SECURITY WARNING: Change these in production!
# Use a strong password (min 12 chars, mixed case, numbers, symbols)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD=""

# IMPORTANT: Generate a secure random string (min 32 characters)
# Example: openssl rand -base64 32
SESSION_SECRET=""

# ----------------------------------------------
# CORS
# ----------------------------------------------
# Comma-separated list of allowed origins
# SECURITY: Only include your actual frontend URLs
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"
